<Window x:Class="ImageEditor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="220" Width="300"
        WindowStartupLocation="CenterOwner"
        Icon="/Resources/app.ico"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Image Editor" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <TextBlock Text="Version 1.0" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Made by crazyj7@gmail.com" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <Button Content="확인" 
                    Width="80" 
                    Height="25" 
                    Click="Button_Click"
                    IsDefault="True"
                    IsCancel="True"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window> 